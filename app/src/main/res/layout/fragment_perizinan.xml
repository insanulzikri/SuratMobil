<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.netne.afahzis.appmobil.Fragment.PerizinanFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/notLogin"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.CardView
                android:layout_marginTop="-5dp"
                android:backgroundTint="@color/colorSkyBlue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="60dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/colorWhite"
                        android:layout_marginBottom="10dp"
                        android:textAlignment="center"
                        android:text="LogIn untuk mengAkses Aplikasi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:layout_marginBottom="16dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <android.support.v7.widget.CardView
                            android:id="@+id/btnLogin"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:padding="10dp"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:textColor="@color/colorSkyBlue"
                                    android:text="Masuk"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                        </android.support.v7.widget.CardView>
                        <android.support.v7.widget.CardView
                            android:id="@+id/btnRegister"
                            android:backgroundTint="@color/colorDeepSkyBlueDark2"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:padding="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:padding="10dp"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:textColor="@color/colorWhite"
                                    android:text="Daftar"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                        </android.support.v7.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:background="@color/colorWhite"
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAlignment="center"
                android:id="@+id/txtTanggal"
                android:layout_weight="1.1"
                android:text="Tanggal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGrayDark"/>
            <View
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@color/colorGray"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>
            <TextView
                android:textAlignment="center"
                android:id="@+id/txtNoPoll"
                android:layout_weight="1"
                android:text="Nomor Polisi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGrayDark"/>
            <View
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@color/colorGray"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>
            <TextView
                android:textAlignment="center"
                android:id="@+id/txtPerizinan"
                android:layout_weight="1"
                android:text="Keterangan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGrayDark"/>
            <View
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@color/colorGray"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>
            <TextView
                android:textAlignment="center"
                android:id="@+id/txtStatus"
                android:layout_weight="1"
                android:text="Status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGrayDark"/>
        </LinearLayout>
        <View
            android:background="@color/colorGray"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <ListView
            android:id="@+id/listIzin"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>
    </LinearLayout>

</FrameLayout>
